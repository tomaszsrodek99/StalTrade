@{
    var jwtToken = Context.Request.Cookies["JWTToken"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StalTrade</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/loading-spinner.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="blur-overlay" id="blurOverlay"></div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <h1 class="navbar-brand"><img src="" /> StalTrade</h1>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">                           
                    <h1 class="clock navbar-brand"><span id="clock"></span></h1>
                <h1 class="navbar-brand logout">
                    <a class="nav-link no-link-style" asp-controller="User" asp-action="Logout">
                        <i class="fa-solid fa-right-from-bracket"></i> Wyloguj
                    </a>
                </h1>
                
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div id="tokenExpirationMessage">
        <p>Wylogowano z powodu braku aktywności</p>
        <button id="acceptButton">Akceptuj</button>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - StalTrade
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/loading.js" asp-append-version="true"></script>
    <script src="~/js/user.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script>
        window.onload = function () {
            var token = '@jwtToken';
            scheduleTokenExpiration(token);
        }
        setInterval(updateClock, 1000);

        updateClock();
    </script>

</body>
</html>
