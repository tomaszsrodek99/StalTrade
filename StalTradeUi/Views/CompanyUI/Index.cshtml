@model IEnumerable<StalTradeAPI.Dtos.CompanyDto>

@{
    ViewData["Title"] = "Companies";
    Layout = "_UserLayout";
    var number = 1;
}

<div class="row">
    <h2 class="text-center">Baza klientów i dostawców</h2>
    <div class="col-9">
        <div class="input-group search-input">
            <span class="input-group-text">
                <i class="fa-solid fa-magnifying-glass"></i>
            </span>
            <input class="form-control search-bar" type="text" id="searchInput" onkeyup="searchByName()" placeholder="Wyszukaj po nazwie firmy..">
        </div>
        
        @if (Model.Any())
        {
            <div class="text-center">
                <table id="search-table" class="table table-striped table-bordered table-hover display">
                    <thead class="thead-dark">
                        <tr>
                            <th></th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ShortName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.City)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PostalCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PostOffice)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NIP)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PaymentMethod)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(number).</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShortName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PostalCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PostOffice)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NIP)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PaymentMethod)
                                </td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Actions">
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-info" onclick="toggleContacts(@item.CompanyID);" style="margin-right: 5px;">Kontakty</a>
                                            <a class="btn btn-secondary update-btn" onclick="loadUpdateCompanyForm(this)" data-item='@Json.Serialize(item)' style="margin-right: 5px;">Edytuj</a>
                                            @Html.ActionLink("Usuń", "RemoveCompany", "CompanyUI", new { id = item.CompanyID }, new { @class = "btn btn-danger", onclick = "return confirm('Czy na pewno chcesz usunąć rekord?');" })
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr class="contact-row" id="@item.CompanyID" style="display: none;">
                                <td colspan="10" style="padding: 0;">
                                    <div class="text-center">
                                        <table class="table table-striped table-bordered table-hover">
                                            <thead class="thead-dark">
                                                <tr>                                                   
                                                    <th>Imię</th>
                                                    <th>Nazwisko</th>
                                                    <th>Stanowisko</th>
                                                    <th>Tel. 1</th>
                                                    <th>Tel. 2</th>
                                                    <th>Email</th>
                                                    <th>
                                                        <a class="btn btn-primary" onclick="loadCreateContactForm(@item.CompanyID);" style="margin-right: 5px;">Dodaj</a>
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var contact in item.Contacts)
                                                {
                                                    <tr>
                                                        <td>@contact.Firstname</td>
                                                        <td>@contact.Lastname</td>
                                                        <td>@contact.Position</td>
                                                        <td>@contact.Phone1</td>
                                                        <td>@contact.Phone2</td>
                                                        <td>@contact.Email</td>
                                                        <td>
                                                            <div class="btn-group" role="group">
                                                                <a class="btn btn-secondary update-btn" onclick="loadUpdateContactForm(this)" data-item='@Json.Serialize(contact)' style="margin-right: 5px;">Edytuj</a>
                                                                @Html.ActionLink("Usuń", "RemoveContact", "CompanyUI", new { id = contact.ContactID }, new { @class = "btn btn-danger", onclick = "return confirm('Czy na pewno chcesz usunąć rekord?');" })
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }

                                            </tbody>

                                        </table>
                                        <div class="text-center-contact"></div>
                                    </div>
                                </td>
                            </tr>
                            number++;
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>Brak danych do wyświetlenia.</p>
        }
        <a class="btn btn-primary add-button" onclick="loadCreateCompanyForm()">Dodaj nowy rekord</a>
    </div>
    <div id="partial-view" class="partial-view col-3 hidden">
        @await Html.PartialAsync("CreateCompany", new StalTradeAPI.Dtos.CompanyDto()),
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/company.js"></script>

}