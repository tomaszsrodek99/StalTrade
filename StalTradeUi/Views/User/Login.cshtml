@model StalTradeApi.Dtos.UserLoginRequest
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-6">
        <img src="/img/logo.png" class="img-fluid big-logo" />
        <h1 class="login-motto">aaaaaaa</h1>
    </div>

    <div class="col-md-6" style="background-color:#1a6985; padding-top: 20px; padding-bottom: 22%; border: 1px solid black; margin-top: -10px;">
        <div class="text-center">
            <img src="/img/Odkuwki.png" class="img-fluid" />
            <div class="blur-overlay" id="blurOverlay"></div>
            <form id="loginForm" asp-action="Login" asp-controller="User" class="my-form">
                <h2>Logowanie</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <label asp-for="Email" class="control-label float-start">Email</label>
                <div class="form-group form-floating">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                        <input type="email" asp-for="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <label asp-for="Password" class="control-label float-start">Hasło</label>
                <div class="form-group form-floating">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input type="password" asp-for="Password" class="form-control" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="btn-group">
                        <button type="submit" class="btn btn-primary">Zaloguj się</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}