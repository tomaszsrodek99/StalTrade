@model StalTradeAPI.Dtos.ContactDto

<form class="contact-form" id="contactForm" method="post" action="@ViewBag.Action">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <input asp-for="CompanyID" class="form-control" hidden />
        <input asp-for="ContactID" class="form-control" hidden />
        <div class="form-group col-2">
            <label asp-for="Firstname" class="control-label"></label>
            <input asp-for="Firstname" class="form-control" />
            <span asp-validation-for="Firstname" class="text-danger"></span>
        </div>

        <div class="form-group col-2">
            <label asp-for="Lastname" class="control-label"></label>
            <input asp-for="Lastname" class="form-control" />
            <span asp-validation-for="Lastname" class="text-danger"></span>
        </div>

        <div class="form-group col-2">
            <label asp-for="Position" class="control-label"></label>
            <input asp-for="Position" class="form-control" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>

        <div class="form-group col-1">
            <label asp-for="Phone1" class="control-label"></label>
            <input asp-for="Phone1" class="form-control" />
            <span asp-validation-for="Phone1" class="text-danger"></span>
        </div>

        <div class="form-group col-1">
            <label asp-for="Phone2" class="control-label"></label>
            <input asp-for="Phone2" class="form-control" />
            <span asp-validation-for="Phone2" class="text-danger"></span>
        </div>

        <div class="form-group col-2">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group col-1 btn-group">
            <label class="control-label" style="visibility:hidden">Akcje</label>
                <button type="submit" class="btn btn-primary">Zapisz</button>
        </div>
    </div>
</form>
