@model StalTradeAPI.Dtos.DepositDto

<div class="text-center form-container">
    <h2>Wpłać kwotę na konto</h2>
    <form id="depositListForm" asp-controller="ExpenseUI" asp-action="AddDeposit" method="post" class="my-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Cash" class="control-label"></label>
            <input id="cash" asp-for="Cash" name="Cash" class="form-control" type="number" min="2" step="0.01" />
        </div>
        <div class="form-group">
            <div class="btn-group">
                <button style="margin-right: 15px" type="button" class="btn btn-dark" onclick="CloseForm()">Wstecz</button>
                <button type="submit" class="btn btn-primary">Zapisz</button>
            </div>
        </div>
    </form>
</div>